# ============================================================================
# PDF Metadata Extractor - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# OpenAI API (Optional - for vision-based signature detection)
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-key-here
# Get your API key from: https://platform.openai.com/api-keys

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FORMAT=json
# Options: json (structured), text (human-readable)

LOG_DIR=logs
# Directory for log files

# ----------------------------------------------------------------------------
# Processing Configuration
# ----------------------------------------------------------------------------
MAX_WORKERS=4
# Number of parallel workers (default: 4)
# Recommended: number of CPU cores

TIMEOUT_SECONDS=60
# Timeout per PDF (default: 60)
# Increase for very large files

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_VISION_API=false
# Enable GPT-4o vision for scanned signature detection
# Note: Costs $0.01-0.02 per image

ENABLE_OCR=false
# Enable OCR fallback (requires pytesseract)

VALIDATE_SIGNATURES=true
# Enable digital signature validation via pyhanko
# Set to false for faster processing without validation

EXTRACT_ANNOTATIONS=false
# Extract PDF annotations (comments, highlights)
# Set to true if needed

# ----------------------------------------------------------------------------
# File Size Limits
# ----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=200
# Skip files larger than this (default: 200MB)

WARN_FILE_SIZE_MB=50
# Warn if file exceeds this size (default: 50MB)

SKIP_ON_EXCEED=true
# Skip large files vs. error (default: true)

# ----------------------------------------------------------------------------
# Vision API Cost Control
# ----------------------------------------------------------------------------
VISION_MAX_BUDGET=10.00
# Maximum spending per run (default: $10.00)

VISION_COST_PER_CALL=0.02
# Estimated cost per image (default: $0.02)

VISION_WARN_THRESHOLD=5.00
# Warn when spending exceeds this (default: $5.00)

# ----------------------------------------------------------------------------
# Output Configuration
# ----------------------------------------------------------------------------
OUTPUT_DIR=./outputs
# Base directory for all outputs

REPORT_FORMAT=both
# Options: excel, json, both (default: both)

INCLUDE_TIMESTAMPS=true
# Include timestamps in filenames (default: true)

# ----------------------------------------------------------------------------
# Session State / Caching
# ----------------------------------------------------------------------------
ENABLE_CACHING=true
# Skip unchanged files based on hash (default: true)

SESSION_STATE_FILE=session_state.json
# Path to session state file

FORCE_REPROCESS=false
# Ignore cache and reprocess all files (default: false)

# ----------------------------------------------------------------------------
# Advanced Settings
# ----------------------------------------------------------------------------
# Confidence thresholds
MIN_CONFIDENCE_THRESHOLD=40
HIGH_CONFIDENCE_THRESHOLD=70

# Rate limiting (vision API)
VISION_MAX_CALLS_PER_MINUTE=10
VISION_MAX_CALLS_PER_RUN=500

# ============================================================================
# End of Configuration
# ============================================================================
